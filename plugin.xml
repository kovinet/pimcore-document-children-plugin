<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>

        <!-- the plugin name [A-Za-z_] -->
        <pluginName>DocumentChildrenGrid</pluginName>
        <pluginNiceName>Document Children Grid</pluginNiceName>

        <!-- a short description -->
        <pluginDescription><![CDATA[Provides additional tab for Documents displaying children grid]]></pluginDescription>

        <!-- meta data -->
        <pluginVersion>1.0</pluginVersion>
        <pluginRevision>1</pluginRevision>
        <pluginBuildTimestamp>0</pluginBuildTimestamp>

        <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
        <pluginClassName>\DocumentChildrenGrid\Plugin</pluginClassName>

        <!-- include paths relative to plugin-directory -->
        <pluginIncludePaths>
            <path>/DocumentChildrenGrid/lib</path>
        </pluginIncludePaths>

        <!-- namespaces to register with autoloader-->
        <pluginNamespaces>
            <namespace>DocumentChildrenGrid</namespace>
        </pluginNamespaces>

        <!-- js files with path relative to plugin-directory -->
        <pluginJsPaths>
            <path>/plugins/DocumentChildrenGrid/static/js/startup.js</path>
            <path>/plugins/DocumentChildrenGrid/static/js/settings.js</path>
        </pluginJsPaths>

        <!-- css files with path relative to plugin-directory -->
        <pluginCssPaths>
            <path>/plugins/DocumentChildrenGrid/static/css/document-semantics.css</path>
        </pluginCssPaths>
    </plugin>
</zend-config>
